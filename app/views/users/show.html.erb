<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h5 class="pt-4">投稿数の前日比・前週比</h5>
      <%= render 'user-books-count',today: @today, yesterday: @yesterday, this_week: @this_week, last_week: @last_week %>
    </div>
  </div>
</div>
