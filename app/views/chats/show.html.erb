<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Chat with <%= @user.name %></h2>
      <table class="message table">
        <thead>
          <tr>
            <th class="align-left"><%= current_user.name %></th>
            <th class="align-left"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
        <% @chats.each do |chat| %>
         <% if chat.user_id == current_user.id %>
           <tr>
             <th class="align-left">
              <%= chat.message %>
             </th>
             <th></th>
           </tr>
           <% else %>
            <tr>
              <th></th>
              <th class="align-left">
                <%= chat.message %>
              </th>
            </tr>
         <% end %>
        <% end %>

      </table>
      <div class="justify-content-center">
       <%= form_with model: @chat,local: true do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "SEND", class: 'btn btn-sm btn-success chat-btn' %>
       <% end %>
      </div>
    </div>
  </div>
</div>